<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Inclure le fichier CSS externe #}
    <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
    <header>
        <!-- Barre de navigation -->
        <nav>
            <a href="{{ path('app_home') }}">
                <img id="logo_pokedex" src="{{ asset('assets/pokedex.png') }}" alt="Pokedex">
            </a>
            <div id="lien_nav">
                <a href="{{ path('app_liste_pokemon') }}"> LISTE DES POKÉMONS </a>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <span>{{ app.user.pseudo }}</span>
                    <a href="{{ path('app_logout') }}"> LOG OUT </a>
                {% else %}
                    <a href="{{ path('app_compte') }}"> SIGN IN </a>
                    <a href="{{ path('app_login') }}"> LOG IN </a>
                {% endif %}
            </div>
        </nav>
    </header>
    {% block body %}{% endblock %}
</body>
</html>
